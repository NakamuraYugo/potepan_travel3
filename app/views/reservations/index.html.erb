<div class="container-fiuld reservations">
  <h4 class="pb-4">予約済みルーム一覧</h4>
  <table>
    <thead>
      <tr align="center">
        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>ルーム紹介</th>
        <th>合計料金</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>予約確定日時</th>
      </tr>
    </thead>

    <tbody>
      <% @reservations.each do |reservation| %>
        <tr>
          <td>
            <% if reservation.room.room_image.blank? %>
              <%= image_tag 'default_room.jpg', class: 'card-img-top img-fluid' %>
            <% else %>
              <%= image_tag reservation.room.room_image.url,class: 'card-img-top img-fluid' %> 
            <% end %>
          </td>
          <td><%= link_to reservation.room.name, {controller: 'rooms', action: 'show', id: reservation.room.id}  %></td>
          <td><%= reservation.room.introduction %></td>
          <td><%= reservation.total_price %></td>
          <td><%= reservation.start_date %></td>
          <td><%= reservation.end_date %></td>
          <td><%= reservation.created_at.strftime('%Y年%m月%d日 %H:%M') %></td>
        </tr>
      <% end %>    
    </tbody>
  </table>
</div>
