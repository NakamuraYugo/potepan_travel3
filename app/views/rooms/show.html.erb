<div class="container room-show">
  <div class="row">
    <div class="col-md-8">
      <% if @room.room_image.blank? %>
        <%= image_tag 'default_room.jpg', class: 'card-img-top img-fluid', size: '300x200'  %>
      <% else %>
        <%= image_tag @room.room_image.url,class: 'card-img-top img-fluid', size: '300x200' %> 
      <% end %>
      <div class="room-details">
        <div class="room-detail-icon">
          <!-- <%= link_to image_tag('default_icon.jpg', class:'navbar-brand', size: '100x100'),root_path %> -->
          <% if @user.user_image.blank? %>
            <%= image_tag 'default_icon.jpg', class: 'card-img-top img-fluid', size: '100x100'  %>
          <% else %>
            <%= image_tag @user.user_image.url,class: 'card-img-top img-fluid', size: '100x100' %> 
          <% end %>
        </div>
        <div class="room-detail-profile">
          <p class="room-detail-prifile-name"><%= @room.name %></p>
          <p class="room-detail-profile-address"><%= @room.address %></p>
        </div>
        <div>
          <p class="room-detail-profile-introduction"><%= @room.introduction %></p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="room-reservation">
        <h5><%= @room.price %>/ 日</h5>
        <div class="reservation-form">
          
          <%= render 'reservations/form', { room: @room, reservation: @reservation } %>

        </div>
      </div>
    </div>
    <div class="back-link">
      <%= link_to :back do %>
        <button>戻る</button>
      <% end %>
    </div>
  </div>
</div>
